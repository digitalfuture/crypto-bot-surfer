{
  "name": "crypto-bot-surfer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "logs": "pm2 logs crypto-bot-surfer --lines 100",
    "logs:clear": "pm2 flush crypto-bot-surfer",
    "restart": "npm stop && npm start && npm run logs",
    "start": "pm2 start node --name crypto-bot-surfer --attach --log-date-format=\"YYYY-MM-DD HH:mm Z\" -- -r dotenv/config ./server/bot.js",
    "nodemon": "nodemon -- -r  dotenv/config ./server/bot.js",
    "node": "node --inspect -r dotenv/config ./server/bot.js",
    "start-logs": "pm2 start node --name crypto-bot-surfer --attach --log-date-format=\"YYYY-MM-DD HH:mm Z\" --raw -- -r dotenv/config ./server/bot.js",
    "stop": "pm2 delete crypto-bot-surfer",
    "upgrade": "npm stop && npm run upgrade:git && npm install",
    "upgrade:git": "git reset --hard HEAD && git pull"
  },
  "dependencies": {
    "chart.js": "^2.9.4",
    "chartjs-node-canvas": "^3.1.0",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "node-binance-api": "^0.13.0",
    "telegraf": "^4.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
